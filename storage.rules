rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow preflight requests
    match /{allPaths=**} {
      allow read, write: if request.method == 'OPTIONS';
    }
    
    // Main storage rules
    match /{allPaths=**} {
      // Public read for site assets
      allow read: if true;
      // Authenticated writes
      allow write: if request.auth != null;
      
      // Handle CORS headers
      match /{path=**} {
        allow read, write: if request.method == 'OPTIONS';
      }
    }
  }
}
